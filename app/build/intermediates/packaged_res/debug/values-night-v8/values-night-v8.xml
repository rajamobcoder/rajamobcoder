<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <style name="ButtonTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/metropolis_regular</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:paddingLeft">@dimen/_24sdp</item>
        <item name="android:paddingRight">@dimen/_24sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ButtonTheme.Primary">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@drawable/bg_button_yellow</item>
    </style>
    <style name="ButtonTheme.Secondary">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button_white</item>
    </style>
    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
    <style name="MyFabOverlay">
        <item name="colorSecondary">@color/teal_200</item>
        
        <item name="colorOnSecondary">@color/transparent</item>
    </style>
    <style name="MyFloatingActionButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/MyFabOverlay</item>
    </style>
    <style name="Theme.Code_rv_mvvm" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor" ns1:targetApi="l">?attr/colorPrimaryVariant</item>
        
    </style>
</resources>